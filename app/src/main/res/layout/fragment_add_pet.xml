<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_pet_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <com.rey.material.widget.EditText
                android:id="@+id/pet_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/new_pet_name_hint"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                app:et_dividerColor="@color/title_text"
                app:et_dividerHeight="1dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="@color/title_text" />

            <com.rey.material.widget.EditText
                android:id="@+id/pet_age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pet_name"
                android:layout_alignStart="@+id/pet_name"
                android:layout_below="@+id/pet_name"
                android:layout_marginTop="5dp"
                android:hint="@string/new_pet_age_hint"
                android:inputType="numberDecimal"
                android:padding="5dp"
                app:et_dividerColor="@color/title_text"
                app:et_dividerHeight="1dp"
                app:et_labelEnable="true"
                app:et_labelTextColor="@color/title_text" />

            <com.rey.material.widget.Spinner
                android:id="@+id/pet_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pet_age"
                android:layout_alignStart="@+id/pet_age"
                android:layout_below="@+id/pet_age"
                android:hint="@string/new_pet_type_hint"
                app:spn_label="@string/new_pet_type_hint"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@color/title_text"
                app:spn_arrowColor="@color/title_text"
                app:spn_arrowPadding="10dp"
                app:spn_arrowSize="5sp"
                app:spn_dividerColor="@color/title_text"
                app:spn_dividerHeight="1dp"/>

            <com.rey.material.widget.Spinner
                android:id="@+id/pet_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pet_type"
                android:layout_alignStart="@+id/pet_type"
                android:layout_below="@+id/pet_type"
                android:hint="@string/new_pet_gender_hint"
                app:spn_label="@string/new_pet_gender_hint"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@color/title_text"
                app:spn_arrowColor="@color/title_text"
                app:spn_arrowPadding="10dp"
                app:spn_arrowSize="5sp"
                app:spn_dividerColor="@color/title_text"
                app:spn_dividerHeight="1dp" />

            <com.rey.material.widget.Spinner
                android:id="@+id/pet_main_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pet_gender"
                android:layout_alignStart="@+id/pet_gender"
                android:layout_below="@+id/pet_gender"
                android:hint="@string/new_pet_main_color_hint"
                app:spn_label="@string/new_pet_main_color_hint"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@color/title_text"
                app:spn_arrowColor="@color/title_text"
                app:spn_arrowPadding="10dp"
                app:spn_arrowSize="5sp"
                app:spn_dividerColor="@color/title_text"
                app:spn_dividerHeight="1dp" />

            <com.rey.material.widget.Spinner
                android:id="@+id/pet_second_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="fill_parent"
                android:layout_alignLeft="@+id/pet_main_color"
                android:layout_alignStart="@+id/pet_main_color"
                android:layout_below="@+id/pet_main_color"
                android:hint="@string/new_pet_second_color_hint"
                app:spn_label="@string/new_pet_second_color_hint"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@color/title_text"
                app:spn_arrowColor="@color/title_text"
                app:spn_arrowPadding="10dp"
                app:spn_arrowSize="5sp"
                app:spn_dividerColor="@color/title_text"
                app:spn_dividerHeight="1dp"/>

            <Button
                android:id="@+id/choose_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet_second_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/choose_location"
                android:textColor="@color/button_text"
                android:background="@color/button_background"/>

            <TextView
                android:id="@+id/chosen_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/choose_location"
                android:layout_alignBottom="@+id/choose_location"
                android:layout_toRightOf="@+id/choose_location"
                android:layout_toEndOf="@+id/choose_location"
                android:text=""
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/pet_description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/choose_location"
                android:ems="10"
                android:hint="@string/new_pet_description_hint"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:layout_margin="10dp"/>

            <CheckBox
                android:id="@+id/pet_vaccinated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pet_description"
                android:checked="false"
                android:text="@string/new_pet_vaccinated_hint"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/pet_submit_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/new_pet_submit_image"
                android:layout_below="@+id/pet_vaccinated"
                android:textColor="@color/button_text"
                android:background="@color/button_background"/>

            <ImageView
                android:id="@+id/imgView1"
                android:layout_below="@+id/pet_submit_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"/>


            <ImageView
                android:id="@+id/imgView2"
                android:layout_toEndOf="@+id/imgView1"
                android:layout_below="@+id/pet_submit_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:id="@+id/imgView3"
                android:layout_toEndOf="@+id/imgView2"
                android:layout_below="@+id/pet_submit_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:id="@+id/imgView4"
                android:layout_below="@+id/imgView1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:id="@+id/imgView5"
                android:layout_below="@+id/imgView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/pet_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/new_pet_submit"
                android:textColor="@color/button_text"
                android:background="@color/main_button_background"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>