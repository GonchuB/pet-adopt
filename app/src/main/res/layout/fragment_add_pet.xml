<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragTitle"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:text="@string/new_pet_title"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/pet_name"
        android:layout_below="@+id/fragTitle"
        android:layout_alignLeft="@+id/fragTitle"
        android:layout_alignStart="@+id/fragTitle"
        android:layout_marginTop="22dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_type"
        android:layout_below="@+id/pet_name"
        android:layout_alignLeft="@+id/pet_name"
        android:layout_alignStart="@+id/pet_name"
        android:layout_alignRight="@+id/pet_name"
        android:layout_alignEnd="@+id/pet_name"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_color"
        android:layout_below="@+id/pet_type"
        android:layout_alignLeft="@+id/pet_type"
        android:layout_alignStart="@+id/pet_type"
        android:layout_alignRight="@+id/pet_type"
        android:layout_alignEnd="@+id/pet_type" />
</RelativeLayout>